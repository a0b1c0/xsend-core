---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ui, defaultLang } from '../i18n/ui'; // Fix path to match folder structure


interface Props {
  title: string;
  description: string;
  lang: string;
}

const { title, description, lang } = Astro.props;
const t = ui[lang as keyof typeof ui] || ui[defaultLang];
---

<BaseLayout title={title} description={description} lang={lang}>
  <Header lang={lang} />
  
  <main class="py-16 bg-white dark:bg-slate-950 min-h-screen">
    <article class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-10 text-center">
        <h1 class="text-4xl font-extrabold text-slate-900 dark:text-white mb-4 tracking-tight">
          {title}
        </h1>
        <p class="text-xl text-slate-600 dark:text-slate-400">
          {description}
        </p>
      </div>
      
      <div class="prose prose-lg prose-slate dark:prose-invert mx-auto">
        <slot />
      </div>
      
      <div class="mt-16 pt-8 border-t border-slate-200 dark:border-slate-800 text-center">
        <a href={`/${lang}/blog`} class="inline-flex items-center font-medium text-emerald-600 hover:text-emerald-500 dark:text-emerald-400">
          ‚Üê Back to Blog
        </a>
      </div>
    </article>
  </main>
  <Footer lang={lang} />
</BaseLayout>
