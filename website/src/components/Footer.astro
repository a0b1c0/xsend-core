---
import { languages, ui, defaultLang } from '../i18n/ui';

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = ui[lang as keyof typeof ui] || ui[defaultLang];
---

<footer class="bg-white dark:bg-slate-950 border-t border-slate-200 dark:border-slate-800 pt-16 pb-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
      <div class="col-span-2 md:col-span-1">
        <a href={`/${lang}/`} class="flex items-center gap-2 font-bold text-xl text-slate-900 dark:text-white mb-4">
          <img src="/logo.png" alt="xSend Logo" class="w-8 h-8 rounded-md" />
          <span class="text-emerald-500">x</span>Send
        </a>
        <p class="text-sm text-slate-500 dark:text-slate-400 max-w-xs">
          {t['hero.desc']}
        </p>
      </div>
      
      <div>
        <h3 class="font-semibold text-slate-900 dark:text-white mb-4">Product</h3>
        <ul class="space-y-2">
          <li>
            <a href={`/${lang}/#download`} class="text-slate-600 dark:text-slate-400 hover:text-emerald-500 text-sm">Download</a>
          </li>
          <li>
            <a href={`/${lang}/features`} class="text-slate-600 dark:text-slate-400 hover:text-emerald-500 text-sm">Features</a>
          </li>
        </ul>
      </div>

      <div>
        <h3 class="font-semibold text-slate-900 dark:text-white mb-4">Resources</h3>
        <ul class="space-y-2">
           <li>
            <a href={`/${lang}/blog`} class="text-slate-600 dark:text-slate-400 hover:text-emerald-500 text-sm">{t['nav.blog']}</a>
          </li>
          <li>
            <a href={`/${lang}/faq`} class="text-slate-600 dark:text-slate-400 hover:text-emerald-500 text-sm">{t['nav.faq']}</a>
          </li>
        </ul>
      </div>

      <div>
        <h3 class="font-semibold text-slate-900 dark:text-white mb-4">Legal</h3>
        <ul class="space-y-2">
          <li>
            <a href={`/${lang}/privacy`} class="text-slate-600 dark:text-slate-400 hover:text-emerald-500 text-sm">Privacy</a>
          </li>
          <li>
            <a href={`/${lang}/terms`} class="text-slate-600 dark:text-slate-400 hover:text-emerald-500 text-sm">Terms</a>
          </li>
        </ul>
      </div>
    </div>
    
    <div class="pt-8 border-t border-slate-100 dark:border-slate-800 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm text-slate-500 dark:text-slate-400">
        {t['footer.copyright']}
      </p>
      
      <div class="flex gap-4">
        <a href="https://github.com/Start-X/xSend" target="_blank" rel="noopener noreferrer" class="text-slate-400 hover:text-slate-600 dark:hover:text-slate-300">
          <span class="sr-only">GitHub</span>
          <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
